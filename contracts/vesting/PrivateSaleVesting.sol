pragma solidity ^0.8.17;

import {TgeVestingBase} from "./TgeVesting.sol";

/// @title PrivateSale
/// @dev Extends the TgeVestingBase contract with specific settings for PrivateSale vesting.
/// @notice Manages the vesting of tokens specifically allocated to the PrivateSale, with a distinct vesting schedule.
contract PrivateSale is TgeVestingBase {
    /// @notice Constructor for PrivateSale TgeVesting, initializing the vesting with specific timing and rate for the PrivateSale's tokens
    /// @param _dtecAddress Address of the DTEC token to be vested for the PrivateSale
    constructor(address _dtecAddress, uint256 _vestingAmount) 
    
    TgeVestingBase(
        _dtecAddress,
        1726272000, // 14.10.2024 first token release
        400, // %4 TGE for PrivateSale
        960, // // 10 Vesting months for PrivateSale
        _vestingAmount
    ) {}
}
