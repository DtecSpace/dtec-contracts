pragma solidity ^0.8.17;

import {TgeVestingBase} from "./TgeVesting.sol";

/// @title StrategicSale
/// @dev Extends the TgeVestingBase contract with specific settings for StrategicSale vesting.
/// @notice Manages the vesting of tokens specifically allocated to the StrategicSale, with a distinct vesting schedule.
contract StrategicSale is TgeVestingBase {
    /// @notice Constructor for StrategicSale TgeVesting, initializing the vesting with specific timing and rate for the StrategicSale's tokens
    /// @param _dtecAddress Address of the DTEC token to be vested for the StrategicSale
    constructor(address _dtecAddress) 
    
    TgeVestingBase(
        _dtecAddress,
        1725188400, // 01.10.2024 first token release
        700, // %7 TGE for StrategicSale
        775, // // 12 Vesting months for StrategicSale
        6750000 // 6.75M tokens maximum will be locked
    ) {}
}
